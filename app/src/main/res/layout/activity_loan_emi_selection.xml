<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/app_bg"
    android:orientation="vertical"
    tools:context="com.enacle.loanemicalculator.Loan_EMI_Selection">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/footer_color">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_height="@dimen/_25sdp"
            android:layout_width="@dimen/_25sdp"
            android:src="@drawable/back_arrow"
            android:onClick="txt_back"
            android:tint="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan EMI Calculator"
            android:fontFamily="@font/inter_regular"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColor="@color/white"
            />

    </androidx.appcompat.widget.Toolbar>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:columnCount="1"
        android:rowCount="2">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_emi_calc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_color">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_emi" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                android:drawableTint="@color/answer_color"
                android:fontFamily="@font/kanit_medium"
                android:gravity="start"
                android:text="EMI Calculator"
                android:textColor="@color/footer_color"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_loan_calc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_color">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_loan" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                android:drawableTint="@color/answer_color"
                android:fontFamily="@font/kanit_medium"
                android:gravity="start"
                android:text="Loan Calculator"
                android:textColor="@color/footer_color"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_loan_compare_calc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_color">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_loan_compare" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                android:drawableTint="@color/answer_color"
                android:fontFamily="@font/kanit_medium"
                android:gravity="start"
                android:text="Loan Compare"
                android:textColor="@color/footer_color"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_sip_calc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_color">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_sip" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                android:drawableTint="@color/answer_color"
                android:fontFamily="@font/kanit_medium"
                android:gravity="start"
                android:text="SIP Calculator"
                android:textColor="@color/footer_color"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tenure_calc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_color">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_tenure" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                android:drawableTint="@color/answer_color"
                android:fontFamily="@font/kanit_medium"
                android:gravity="start"
                android:text="Tenure Calculator"
                android:textColor="@color/footer_color"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_gst_calc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_color">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_gst" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                android:drawableTint="@color/answer_color"
                android:fontFamily="@font/kanit_medium"
                android:gravity="start"
                android:text="GST Calculator"
                android:textColor="@color/footer_color"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_emi_calc_summary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_color">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_emi_summary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                android:drawableTint="@color/answer_color"
                android:fontFamily="@font/kanit_medium"
                android:gravity="start"
                android:text="EMI Calculate Summary"
                android:textColor="@color/footer_color"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.card.MaterialCardView>
    </GridLayout>

</LinearLayout>